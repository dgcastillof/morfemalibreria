    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "CollectionPage",
        "name": "Talleres de Lectura y Escritura Creativa - Morfema Librería",
        "description": "Talleres de lectura, escritura creativa y poesía organizados por Fluir de Mi en Morfema Librería, Buenos Aires.",
        "url": "https://morfemalibreria.com.ar/talleres.html",
        "publisher": {
          "@type": "Organization",
          "name": "Morfema Librería",
          "url": "https://morfemalibreria.com.ar"
        },
        "mainEntity": {
          "@type": "ItemList",
          "name": "Próximos talleres literarios",
          "itemListElement": [
<% talleresProximos.forEach((taller, index) => { %>
            {
              "@type": "Event",
              "position": <%= index + 1 %>,
              "name": "<%= taller.titulo %>",
              "startDate": "<%= taller.fechaInicio %>",
              "organizer": {
                "@type": "Organization",
                "name": "<%= taller.organizador.nombre %>"
              },
              "location": {
                "@type": "Place",
                "name": "Morfema Librería",
                "address": {
                  "@type": "PostalAddress",
                  "addressLocality": "Buenos Aires",
                  "addressCountry": "AR"
                }
              }
            }<%= index < talleresProximos.length - 1 ? ',' : '' %>
<% }); %>
          ]
        }
      }
    </script>
    <!-- Google tag (gtag.js) -->
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-4WKGMKCLQH"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-4WKGMKCLQH');
